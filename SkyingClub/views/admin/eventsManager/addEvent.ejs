<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">THÊM SỰ KIỆN</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="" method="POST">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputProduct1">Tên sự kiện</label>
                                <input type="text" name="txtTitle" class="form-control" id="inputProduct1" placeholder="Nhập tên sự kiện">
                            </div>
                            <div class="form-group">
                                <label for="selectRounded0">Môn thể thao</label>
                                <select type="select" name="txtTrademark" class="custom-select rounded-0" id="selectRounded1">
              <option>--Select--</option>
              <option>Bơi</option>
              <option>Bóng đá</option>
              <option>Cầu lông</option>
              <option>Nhảy dù</option>
              <option>Trượt tuyết</option>
              <option>Đua ngựa</option>
              <option>Nhảy Bongge</option>
              <option>Tennis</option>
            </select>
                            </div>

                            <div class="form-group">
                                <label for="inputProduct1">Địa điểm</label>
                                <input type="text" name="txtTitle" class="form-control" id="inputProduct1" placeholder="Nhập địa điểm">
                            </div>
                            <div class="form-group">
                                <label for="exampleSelectRounded0">Thời gian bắt đầu</label>
                                <input type="date" name="date" />
                            </div>
                            <div class="form-group">
                                <label for="exampleSelectRounded0">Thời gian kết thúc</label>
                                <input type="date" name="date" />
                            </div>
                            <div class="form-group">
                                <label for="inputField">Nội dung</label>
                                <textarea row="40" v-model="message" style="height:250px; width : 550px;" class="form-control" id="inputField"></textarea>

                            </div>
                            <input type="file" name="sampleFile" accept="image/*" />

                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Review</label>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                            <% if(typeof message != 'undefined') {  %>
                                <h3>
                                    <%- message %>
                                </h3>
                                <%} %>
                        </div>
                    </form>
                </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->

</section>
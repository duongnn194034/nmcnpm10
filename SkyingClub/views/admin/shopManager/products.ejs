<section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">

            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">THÊM SẢN PHẨM</h3>
                </div>
                
                <!-- /.card-header -->
                <!-- form start -->
                <form action="" method="POST" enctype="multipart/form-data">             
                    <div class="card-body">
                      <div class="row">
                        <div class="col-md">
                          <div class="form-group">
                            <label>LOẠI SẢN PHẨM</label>
                            <select name="selectProdType" class="form-control select2bs4" style="width: 100%;">
                              <% prod_type.forEach(function(prodT){ %>
                                  <option value="<%-  prodT._id  %>"><%-  prodT.title  %></option>
                              <%  }) %>
                            </select>
                          </div>
                        </div>
                        <div class="col-md">
                          <div class="form-group">
                            <label>THƯƠNG HIỆU</label>
                            <select name="selectTrad" class="form-control select2bs4" style="width: 100%;">
                              <% prod_type.forEach(function(prodT){ %>
                                <option value="<%-  prodT._id   %>"><%-  prodT.trademark  %></option>
                                <%  }) %>
                            </select>
                          </div>
                        </div>
                        <div class="col-md">
                          <div class="form-group">
                            <label>GIỚI TÍNH</label>
                            <select name="selectSex" class="form-control select2bs4" style="width: 100%;">
                              <% prod_type.forEach(function(prodT){ %>
                                <option value="<%-  prodT._id  %>"><%-  prodT.sex  %></option>
                              <%  }) %>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="inputNameProd">Tên sản phẩm</label>
                        <input type="title" name="txtTitle" class="form-control" id="inputNameProd" placeholder="Nhập tên sản phẩm">
                      </div>
                      <div class="form-group">
                        <label for="inputDesc">Mô tả sản phẩm</label>
                        <input type="description" name="txtDescription" class="form-control" id="inputDesc" placeholder="Nhập mô tả sản phẩm">
                      </div>
                      <div class="row">
                        <div class="col-md">
                          <div class="form-group">
                            <label for="inputQuantily">Số lượng</label>
                            <input type="quantily" name="txtQuantily" class="form-control" id="inputQuantily" placeholder="Nhập số lượng">
                          </div>
                        </div>
                        <div class="col-md">
                          <div class="form-group">
                            <label for="inputImportPrice">Giá nhập vào</label>
                            <input type="importPrice" name="txtImportPrice" class="form-control" id="inputImportPrice" placeholder="Nhập giá nhập vào">
                          </div>
                        </div>
                        <div class="col-md">
                          <div class="form-group">
                            <label for="inputSalePrice">Giá bán</label>
                            <input type="salePrice" name="txtSalePrice" class="form-control" id="inputSalePrice" placeholder="Nhập giá bán ra">
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="inputImageFile">Tải lên ảnh sản phẩm</label>
                        <input type="file" name="fileImage" class"form-control" id="inputImageFile" aria-describedby="image"> 
                      </div>
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check</label>
                      </div>
                    </div>
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    
